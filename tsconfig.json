{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "net/*": ["./net/*"],
      "assets/*": ["./assets/*"],
      "components/*": ["./src/components/*"],
      "modules/*": ["./src/modules/*"],
      "@pages/*": ["./src/pages/*"],
    },
  },
  "include": [
    "src", "net", "global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
}